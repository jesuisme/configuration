[program:{{hermes_service_name}}]

{% if COMMON_ENABLE_NEWRELIC_APP %}
{% set executable = hermes_venv_bin + '/newrelic-admin run-program ' + hermes_venv_bin + '/python ' + hermes_code_dir + '/hermes.py' %}
{% else %}
{% set executable = hermes_venv_bin + '/python ' + hermes_code_dir + '/hermes.py' %}
{% endif %}

command={{ executable }} --pythonpath={{ hermes_code_dir }}

user={{ common_web_user }}
directory={{ hermes_code_dir }}

environment={% if COMMON_ENABLE_NEWRELIC_APP %}NEW_RELIC_STARTUP_TIMEOUT=10,NEW_RELIC_APP_NAME={{ HERMES_NEWRELIC_APPNAME }},NEW_RELIC_LICENSE_KEY={{ NEWRELIC_LICENSE_KEY }},{% endif -%}

stdout_logfile={{ supervisor_log_dir }}/%(program_name)s-stdout.log
stderr_logfile={{ supervisor_log_dir }}/%(program_name)s-stderr.log
killasgroup=true
stopasgroup=true
startsecs=0